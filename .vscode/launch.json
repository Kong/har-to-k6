    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current HAR",
            "program": "${workspaceFolder}/bin/har-to-k6.js",
            "request": "launch",
            "args": ["${file}"],
            "skipFiles": ["<node_internals>/**"],
            "type": "pwa-node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Test",
            "program": "${workspaceFolder}/node_modules/.bin/ava",
            "args": ["debug", "--break", "${file}"],
            "env": {
                "NODE_PATH": "src:test"
            },
            "port": 9229,
            "outputCapture": "std",
            "skipFiles": ["<node_internals>/**/*.js"]
        }
    ]
}
